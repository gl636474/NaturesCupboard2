# Clear all caches
@shell rm -rf "$PROJECT/var/cache"
@shell rm -rf "$PROJECT/var/session"

# @shell creates subshell anyway so the cd does not persist
@shell cd $PROJECT; php -f "$MODULE/flush_cache.php"
